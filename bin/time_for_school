#!/usr/bin/env ruby

require_relative "../lib/user.rb"
require_relative "../lib/teacher.rb"
require_relative "../lib/student.rb"

steve = Student.new
steve.first_name = "Steve"
steve.last_name = "Jobs"

richard_bot = Student.new
richard_bot.first_name = "Richard"
richard_bot.last_name = "Clone"

avi = Teacher.new
avi.first_name = "Avi"
avi.last_name = "Flombaum"

some_knowledge = avi.teach #returns random string 
more_knowledge = avi.teach





steve.learn(some_knowledge)
puts "Steve just learned this important knowledge: '#{steve.knowledge.first}' from Avi"
steve.learn(some_knowledge)
puts "Steve just learned this important knowledge: '#{steve.knowledge.first}' from Avi"
steve.learn(some_knowledge)
puts "Steve just learned this important knowledge: '#{steve.knowledge.first}' from Avi"
steve.learn(some_knowledge)
puts "Richard just learned this important knowledge: '#{richard_bot.knowledge.first}' from Avi"
richard_bot.learn(more_knowledge)
puts "Richard just learned this important knowledge: '#{richard_bot.knowledge.first}' from Avi"
richard_bot.learn(more_knowledge)
puts "Richard just learned this important knowledge: '#{richard_bot.knowledge.first}' from Avi"
richard_bot.learn(more_knowledge)
puts "Richard just learned this important knowledge: '#{richard_bot.knowledge.first}' from Avi"